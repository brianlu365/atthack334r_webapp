<div class="jumbotron">
  <%= image_tag 'home_background.jpg' %>
</div>
<div id="leaderboard">
  <h1>leaderboard</h1>  
  <table class="table">
    <tr>
      <th>name</th>
      <th>points</th>
      <th>weight(g)</th>
    </tr>
    <% @users.each do |u| %>
      <tr>
        <td><%= link_to u.name, user_path(u) %></td>
        <td>
          <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= u.points_percent %>%;">
              <%= u.points_percent %>
            </div>
          </div>
        </td>
        <td><%= u.weights %></td>
      </tr>
    <% end %>
  </table>
</div>
